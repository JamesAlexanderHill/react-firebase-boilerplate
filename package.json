{
  "name": "react-firebase-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate React app with Firebase authentication",
  "scripts": {
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "watch": "npm-run-all --parallel watch:*",
    "watch:client": "cd client && npm run start",
    "watch:server": "cd server && npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JamesAlexanderHill/react-firebase-boilerplate.git"
  },
  "author": "James Hill",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JamesAlexanderHill/react-firebase-boilerplate/issues"
  },
  "homepage": "https://github.com/JamesAlexanderHill/react-firebase-boilerplate#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
